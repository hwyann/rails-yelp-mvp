<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p>Category: <%= @restaurant.category %> </p>
  <p>Phone Number: <%= @restaurant.phone_number %></p>
  <p>Address: <%= @restaurant.address %></p>
  <p>Reviews:</p>
  <% @restaurant.reviews.each do |review| %>
    <div>
      <p><%= review.rating %></p>
      <p><%= review.content %></p>
    </div>
  <% end %>
  <div>
  <%= link_to 'Back to all restaurants', restaurants_path, class: "btn btn-light" %>
  <%= link_to 'Add a new review', new_restaurant_review_path(@restaurant), class: "btn btn-light" %>
  </div>
</div>
